@using Ecommerce.Helpers
@model IEnumerable<Ecommerce.ViewModels.TopSellingProductViewModel>

@if (Model.Any())
{
    <section class="top-selling-products spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2 class="text-center">Top Selling Products</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                @foreach (var product in Model)
                {
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img src="@Url.Content("~/ProductsImages/" + product.AnhDaiDien)" alt="@product.TenSp" width="100%" />
                                    <h2>@product.GiaLonNhat.ToString("C")</h2>
                                    <p>@product.TenSp</p>
                                    <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@product.MaSp" class="btn btn-default add-to-cart">
                                        <i class="fa fa-shopping-cart"></i> Add to cart
                                    </a>
                                </div>
                                <div class="product-overlay">
                                    <div class="overlay-content">
                                        <img src="~/ProductsImages/@product.AnhDaiDien" alt="@product.TenSp" width="100%" />
                                        <h2>@product.GiaLonNhat.ToString("C")</h2>
                                        <p>
                                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-maSp="@product.MaSp">
                                                @product.TenSp
                                            </a>
                                        </p>
                                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@product.MaSp" class="btn btn-default add-to-cart">
                                            <i class="fa fa-shopping-cart"></i> Add to cart
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
