@model Ecommerce.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register Page";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="signup-form">
                    <h2>New User Signup!</h2>

                    <form asp-action="Register" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input asp-for="UserName" type="text" placeholder="Name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Address" type="text" placeholder="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>

                        <input asp-for="Email" type="email" placeholder="Email Address" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <input asp-for="PhoneNumber" type="text" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        <input asp-for="Password" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        <button type="submit" class="btn btn-default">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}