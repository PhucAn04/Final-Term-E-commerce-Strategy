@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>

<section id="advertisement">
	<div class="container">
		<img src="~/Eshopper/images/shop/advertisement.jpg" alt="" />
	</div>
</section>

<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				@Html.Partial("_SidebarPartial")
			</div>

			<div class="col-sm-9 padding-right">
				<div class="features_items">
					<!--features_items-->
					<h2 class="title text-center">Features Items</h2>
					@foreach (var item in Model)
					{
						@await Html.PartialAsync("PartialSanPham", item)
					}
				</div><!--features_items-->
				@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new X.PagedList.Web.Common.PagedListRenderOptionsBase()
				{
					LiElementClasses = new List<String> { "page-item" },
					PageClasses = new List<String> { "page-link" }
					})
			</div>
		</div>
	</div>
</section>