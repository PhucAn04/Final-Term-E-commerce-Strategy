@model Ecommerce.ViewModels.OrderHistoryViewModel

@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.MaHoaDon}";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between">
        <span>Đơn hàng #@Model.MaHoaDon</span>
        <span>Ngày đặt: @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</span>
    </div>
    <div class="card-body">
        <p><strong>Người nhận:</strong> @Model.HoTen</p>
        <p><strong>Tên đăng nhập:</strong> @Model.username</p>
        <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
        <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
        <p><strong>Thanh toán:</strong> @Model.CachThanhToan</p>
        <p><strong>Vận chuyển:</strong> @Model.CachVanChuyen</p>
        <p><strong>Trạng thái:</strong> <span class="badge bg-info">@Model.TrangThai</span></p>
        <p><strong>Tổng tiền:</strong> <span class="text-danger fw-bold">@Model.TongTienHd</span></p>
        @if (!string.IsNullOrEmpty(Model.GhiChu))
        {
            <p><strong>Ghi chú:</strong> @Model.GhiChu</p>
        }

        <h5 class="mt-4">Chi tiết sản phẩm</h5>
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Giảm giá (%)</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    var thanhTien = item.DonGiaBan * item.SoLuongBan * (1 - (decimal)item.GiamGia / 100);
                    <tr>
                        <td>@item.TenSp</td>
                        <td>@item.DonGiaBan</td>
                        <td>@item.SoLuongBan</td>
                        <td>@item.GiamGia</td>
                        <td>@thanhTien</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>