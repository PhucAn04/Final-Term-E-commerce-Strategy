@using Ecommerce.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<UserModel>

@{
    ViewData["Title"] = "User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>List Users</h3>

<p>
    <a asp-area="Admin" asp-action="Create" asp-controller="Category">Add User</a>
</p>
<p>@TempData["Message"]</p>

<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
        @foreach (var item in Model)
        {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-secondary";
            }
            <tr class=@cls>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumer)
                </td>
                <td>
                    <a asp-area="Admin" asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="User" asp-route-maSanPham="@item.Id">Edit</a> |
                    <a asp-area="Admin" asp-action="Detail" class="btn btn-warning btn-sm" asp-controller="User" asp-route-maSanPham="@item.Id">Detail</a> |
                    <a asp-area="Admin" asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="User" asp-route-maSanPham="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new X.PagedList.Web.Common.PagedListRenderOptionsBase()
{
    LiElementClasses = new List<String> { "page-item" },
    PageClasses = new List<String> { "page-link" }
})