@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Ecommerce.Models.TDanhMucSp

@{
    ViewData["Title"] = "Detail Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .product-detail dt,
    .product-detail dd {
        font-size: 20px;
        padding: 12px 0;
    }

    .product-detail dt {
        font-weight: bold;
        border-right: 2px solid #ccc;
        padding-right: 15px;
    }

    .product-detail dd {
        padding-left: 20px;
    }

    .product-detail dl {
        border-bottom: 1px solid #ddd;
        margin-bottom: 0;
    }
</style>

<h1 class="mb-4" style="font-size: 28px; font-weight: bold;">Product Details</h1>

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-body product-detail">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.TenSp</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Laptop compartment</dt>
                <dd class="col-sm-9">@Model.NganLapTop</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Model</dt>
                <dd class="col-sm-9">@Model.Model</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Weight</dt>
                <dd class="col-sm-9">@Model.CanNang</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Expandable capacity</dt>
                <dd class="col-sm-9">@Model.DoNoi</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Website</dt>
                <dd class="col-sm-9">@Model.Website</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Warranty period</dt>
                <dd class="col-sm-9">@Model.ThoiGianBaoHanh</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Product Introduction</dt>
                <dd class="col-sm-9">@Model.GioiThieuSp</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Discount</dt>
                <dd class="col-sm-9">@Model.ChietKhau</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Lowest Price</dt>
                <dd class="col-sm-9">@Model.GiaNhoNhat</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Biggest Price</dt>
                <dd class="col-sm-9">@Model.GiaLonNhat</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Material</dt>
                <dd class="col-sm-9">@Model.MaChatLieuNavigation.ChatLieu</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Brand</dt>
                <dd class="col-sm-9">@Model.MaHangSxNavigation.HangSx</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Country</dt>
                <dd class="col-sm-9">@Model.MaNuocSxNavigation.TenNuoc</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Property</dt>
                <dd class="col-sm-9">@Model.MaDtNavigation.TenLoai</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.MaLoaiNavigation.Loai</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="~/ProductsImages/@Model.AnhDaiDien" width="350" class="img-thumbnail" />
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-area="Admin" asp-action="Index" asp-controller="Product" class="btn btn-secondary" style="font-size: 20px;">
            Back to List Product
        </a>
    </div>
</div>